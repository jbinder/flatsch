<Window x:Class="Flatsch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flatsch"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="None" ResizeMode="NoResize"
        Background="White"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        Deactivated="MainWindow_OnDeactivated"
        Loaded="MainWindow_OnLoaded"
>
    <Viewbox StretchDirection="Both" Stretch="None">
        <Grid>
            <!--<Label Content="blink!!! 👿" />-->
            <tb:TaskbarIcon
                IconSource="/res/icon.ico"
                ToolTipText="flatsch">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="MenuItemTransparent" IsChecked="False" Header="Transparent" Click="MenuItemTransparent_OnClick" />
                        <MenuItem Name="MenuItemEnableSound" IsChecked="True" Header="Sound effect?" Click="MenuItemEnableSound_OnClick" />
                        <MenuItem Name="MenuItemQuit" Header="Quit" Click="MenuItemQuit_OnClick" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
            <Image Height="0" Name="FishImage" Source="res/fish.png" Stretch="Uniform"></Image>
        </Grid>
    </Viewbox>
</Window>
